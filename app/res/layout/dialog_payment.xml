<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle_payment"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <!--充值对话框     -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="1dp"
        android:background="#f0f0f0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ActivityPayment_select_topup_money"
            android:textColor="@color/color_app"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_oval_green"
            android:padding="5dp"
            android:src="@drawable/icon_close" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:dividerHeight="1dp"
        android:listSelector="#FFF"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#f0f0f0">

        <Button
            android:id="@+id/bt_positive"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_payment_button"
            android:padding="0dp"
            android:text="@string/ActivityPayment_confirm"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </FrameLayout>
</LinearLayout>

